extends base

block content
  main.main
    .card-container
    
      each driver in drivers
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/drivers/${driver.photo}`, alt=`${driver.name}`)
            h3.heading-tertirary
              span= driver.name

          .card__details
            //- h4.card__sub-heading= `${driver.difficulty} ${driver.duration}-day driver`
